@model List<FoodMenu.Models.Dish>
@{
    ViewData["Title"] = "MenuIndex";
}


<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6 border p-3">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" class="w-75 img-fluid" />
                </div>
                <div class="d-flex justify-content-center">
                    @item.Price.ToString("N2") $
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                        View Dish
                    </a>
                </div>
            </div>    
        }
    </div>
</div>